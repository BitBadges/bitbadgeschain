# EditorConfig: prevent unwanted changes to .sol and .md on open/save
# https://editorconfig.org

root = true

# Solidity: don't insert final newline or trim (stops "phantom" diffs on open)
[*.sol]
insert_final_newline = false
trim_trailing_whitespace = false

# Markdown: same
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

# Defaults for other files (optional; uncomment if you want consistency elsewhere)
# [*]
# insert_final_newline = false
# trim_trailing_whitespace = false
